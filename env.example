# Переменные окружения для BotManager
# Скопируйте этот файл в .env и настройте под ваше окружение

# Окружение
NODE_ENV=development

# База данных
POSTGRES_DB=botmanager_dev
POSTGRES_USER=botmanager
POSTGRES_PASSWORD=botmanager_password
DATABASE_URL=postgresql://botmanager:botmanager_password@localhost:5432/botmanager_dev

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Telegram
TELEGRAM_BOT_API_URL=https://api.telegram.org/bot

# Frontend
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Email (для разработки)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@botmanager.local

# Логирование
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Безопасность
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Файлы
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Webhook
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
