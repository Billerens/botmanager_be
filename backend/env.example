# Окружение
NODE_ENV=development
PORT=3000

# База данных (ОБЯЗАТЕЛЬНО)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=botmanager
DATABASE_PASSWORD=botmanager_password
DATABASE_NAME=botmanager_dev

# Redis (ОБЯЗАТЕЛЬНО)
REDIS_URL=redis://localhost:6379
# Альтернативно можно использовать отдельные переменные:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# JWT (ОБЯЗАТЕЛЬНО)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# CORS (разделяйте домены запятыми)
CORS_ORIGIN=http://localhost:3001,https://botmanagertest.online

# API
API_PREFIX=api

# Telegram
TELEGRAM_BOT_API_URL=https://api.telegram.org/bot
WEBHOOK_BASE_URL=http://localhost:3000

# Шифрование
ENCRYPTION_KEY=dev-32-character-secret-key-12345

# Email (для разработки)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@botmanager.local

# Логирование
LOG_LEVEL=debug
