# Окружение
NODE_ENV=development
PORT=3000

# База данных (ОБЯЗАТЕЛЬНО)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=botmanager
DATABASE_PASSWORD=botmanager_password
DATABASE_NAME=botmanager_dev

# Redis (ОБЯЗАТЕЛЬНО)
REDIS_URL=redis://localhost:6379
# Альтернативно можно использовать отдельные переменные:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# JWT (ОБЯЗАТЕЛЬНО)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# CORS (разделяйте домены запятыми)
CORS_ORIGIN=http://localhost:3001,https://botmanagertest.online

# API
API_PREFIX=api

# Telegram
TELEGRAM_BOT_API_URL=https://api.telegram.org/bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
WEBHOOK_BASE_URL=http://localhost:3000

# Шифрование
ENCRYPTION_KEY=dev-32-character-secret-key-12345

# Frontend URL (для ссылок)
FRONTEND_URL=http://localhost:3001

# Логирование
LOG_LEVEL=debug

# AWS S3 (для хранения изображений)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=botmanager-products
# Для MinIO или других S3-совместимых хранилищ (опционально)
# AWS_S3_ENDPOINT=http://localhost:9000
# AWS_S3_FORCE_PATH_STYLE=true

# Cloud AI API (Timeweb Cloud AI)
CLOUD_AI_BASE_URL=https://agent.timeweb.cloud
CLOUD_AI_AGENT_ACCESS_ID=your-agent-access-id
CLOUD_AI_DEFAULT_AUTH_TOKEN=your-auth-token

# OpenRouter AI API (для работы с различными AI моделями)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_HTTP_REFERER=https://your-site.com
OPENROUTER_X_TITLE=Your App Name
OPENROUTER_DEFAULT_MODEL=meta-llama/llama-3.3-70b-instruct

# Bytez AI API (для работы с AI моделями через bytez.js)
BYTEZ_API_KEY=your-bytez-api-key